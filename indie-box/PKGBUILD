# Maintainer: Johannes Ernst <jernst@cldstr.com>

pkgname=indie-box
pkgver=0.1
pkgrel=1
pkgdesc="application management framework"
arch=('any')
url="http://indieboxproject.org/"
license=('GPL')
groups=()
depends=('perl' 'perl-json' 'perl-log-log4perl' 'mariadb' 'perl-dbi' 'perl-dbd-mysql' 'apache')
backup=( 'etc/indie-box/config.json' )
source=()
options=('!strip')
install=install
md5sums=('48b4847cf44d760d3916a64e9de1f8a9')

package() {
# Code
    mkdir -p $pkgdir/usr/bin
    install -m755 $startdir/bin/indie-box-admin $pkgdir/usr/bin/

    mkdir -p $pkgdir/usr/lib/perl5/vendor_perl/IndieBox
    for f in $startdir/vendor_perl/IndieBox/*.pm; do
        install -m755 $f $pkgdir/usr/lib/perl5/vendor_perl/IndieBox/
    done

# Config files
    mkdir -p $pkgdir/etc/indie-box/sites
    install -m644 $startdir/etc/indie-box/config.json $pkgdir/etc/indie-box/
    install -m644 $startdir/etc/indie-box/log4perl.conf $pkgdir/etc/indie-box/

# Manifest files
    mkdir -p $pkgdir/var/lib/indie-box/manifests

# Web server config files
    mkdir -p $pkgdir/etc/httpd/conf
    mkdir -p $pkgdir/etc/httpd/indie-box/appconfigs
    mkdir -p $pkgdir/etc/httpd/indie-box/mods-available
    mkdir -p $pkgdir/etc/httpd/indie-box/mods-enabled
    mkdir -p $pkgdir/etc/httpd/indie-box/sites
    install -m644 $startdir/etc/httpd/conf/httpd-indie-box.conf $pkgdir/etc/httpd/conf/
    for f in $startdir/etc/httpd/indie-box/*.conf; do
        install -m644 $f $pkgdir/etc/httpd/indie-box/
    done
    for f in $startdir/etc/httpd/indie-box/mods-available/*.load; do
        install -m644 $f $pkgdir/etc/httpd/indie-box/mods-available/
    done

# Web server content files
    mkdir -p $pkgdir/srv/http/maintenance
    for f in $startdir/www/maintenance/*.{css,html,png}; do
        install -m644 $f $pkgdir/srv/http/maintenance/
    done

    mkdir -p $pkgdir/srv/http/nosuchsite
    for f in $startdir/www/nosuchsite/*.{css,html,png}; do
        install -m644 $f $pkgdir/srv/http/nosuchsite/
    done

    mkdir -p $pkgdir/srv/http/sites
    mkdir -p $pkgdir/srv/http/wellknown

# Documentation
    mkdir -p $pkgdir/usr/share/doc/indie-box
    install -m644 $startdir/doc/README $pkgdir/usr/share/doc/indie-box
}
